<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard_admin">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:padding="10dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="45dp"
                android:gravity="center_vertical"
                android:text="ADMIN"
                android:textColor="#000"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="141dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="261dp"
                android:layout_marginLeft="261dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/gambar_admin" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnTambahLap"
            android:layout_width="267dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tambah Lapangan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="302dp" />

        <Button
            android:id="@+id/list_lapangan"
            android:layout_width="267dp"
            android:layout_height="50dp"
            android:text="List Lapangan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="422dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>